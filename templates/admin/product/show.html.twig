{% extends 'adminbase.html.twig' %}

{% block title %}Kategori Detayı {% endblock %}

{% block content %}
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Anamenü</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Ürünler</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Ürün Detayı</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">

            <div class="col">
                <div class="card">
                    <div class="card-title">
                        <h3>Üye Detayı </h3>
                    </div>


                    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ product.type }}</td>
            </tr>
            <tr>
                <th>Publisher_id</th>
                <td>{{ product.publisherId }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ product.year }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ product.amount }}</td>
            </tr>
            <tr>
                <th>Pprice</th>
                <td>{{ product.pprice }}</td>
            </tr>
            <tr>
                <th>Sprice</th>
                <td>{{ product.sprice }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ product.min }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ product.keywords }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ product.detail }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Writer</th>
                <td>{{ product.writer }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ product.userId }}</td>
            </tr>
            <tr>
                <th>Categor_id</th>
                <td>{{ product.categorId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>

        </tbody>
    </table>

                    <div class="form-group row">

                        <a class="btn mb-1 btn-info" href="{{ path('admin_product_index') }}">Ürün listesine Dön</a>

                        <a class="btn mb-1 btn-primary"href="{{ path('admin_product_edit', {'id': product.id}) }}">Düzelt</a>

                        <a href="">{{ include('admin/product/_delete_form.html.twig') }}</a>

                    </div>



                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

