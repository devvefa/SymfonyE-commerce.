
<form name="user" method="post">

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-skill">Kategorisi <span class="text-danger">*</span>
        </label>


        <div class="col-lg-8">
            <select class="form-control" id="val-skill" name="product[categor_id]">
                {% if(catname) %}
                    <option value="{{ product.categorId }}">{{ catname[0].title }}</option>
                {% endif %}

                {% for cat in catlist %}
                    <option value="{{ cat.id }} "> {{ cat.title }} </option>
                {% endfor %}

            </select>


        </div>
    </div>


    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Ürün Adı </label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ product.title}}"name="product[title]" placeholder="Enter a title..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Kısa Açıklama</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ product.description}}"name="product[description]" placeholder="Enter a description..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Anahtar Kelimeler</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ product.keywords}}"name="product[keywords]" placeholder="Enter a keywords..">
        </div>
    </div>


    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">writer-----*</label>
        <div class="col-lg-8">
            <input type="number" class="form-control" id="val-username"
                   value="{{ product.writer}}"name="product[writer]" placeholder="Enter a writer..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Kullanıcı İD</label>
        <div class="col-lg-8">
            <input type="number" class="form-control" id="val-username"
                   value="{{ product.userid}}"name="product[user_id]" placeholder="Enter a user_id..">
        </div>
    </div>







    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Yayın İd</label>
        <div class="col-lg-8">
            <input type="number" class="form-control" id="val-username"
                   value="{{ product.publisherid}}"name="product[publisher_id]" placeholder="Enter a publisher_id..">
        </div>
    </div>



    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">YIL</label>
        <div class="col-lg-8">
            <input type="number" class="form-control" id="val-username"
                   value="{{ product.year}}"name="product[year]" placeholder="Enter a year..">
        </div>
    </div>


    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Miktar</label>
        <div class="col-lg-8">
            <input type="number" class="form-control" id="val-username"
                   value="{{ product.amount}}"name="product[amount]" placeholder="Enter a amount..">
        </div>
    </div>



    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Alış Fiyatı</label>
        <div class="col-lg-8">
            <input type="number" class="form-control" id="val-username"
                   value="{{ product.pprice}}"name="product[pprice]" placeholder="Enter a pprice..">
        </div>
    </div>



    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Satış Fiyatı</label>
        <div class="col-lg-8">
            <input type="number" class="form-control" id="val-username"
                   value="{{ product.sprice}}"name="product[sprice]" placeholder="Enter a sprice..">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Minmum Adet</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ product.min}}"name="product[min]" placeholder="Enter a min..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Tür</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ product.type}}"name="product[type]" placeholder="Enter a type..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Resim</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ product.image}}"name="product[image]" placeholder="Enter a image..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="editor">Ürün Detayı  <span class="text-danger">*</span>
        </label>
        <div class="col-lg-8">
            <textarea id="editorPrdt" rows="10" cols="100" name="product[detail]" > {{ product.detail }}</textarea>
        </div>
    </div>





    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Aktif Durum <span class="text-danger">*</span>
        </label>
        <div class="col-lg-8">
            <select class="form-control" id="val-skill" name="product[status]">
                <option >{{ product.status }}</option>
                <option >True</option>
                <option >False</option>

            </select>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-lg-8 ml-auto">
            <button type="submit" class="btn btn-primary">Kaydet</button>

        </div>
    </div>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editorPrdt' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
</form>