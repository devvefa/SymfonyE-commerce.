
<form method="post">


    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-skillw">Aktif Durum <span class="text-danger">*</span>
        </label>
        <div class="col-lg-8">
            <select class="form-control" id="val-skillw" name="category[parent_id]">
                {% if category.parentId!=0 %}
                    <option value="{{ category.parentId }} "> {{ catname.title }} </option>
                {% else %}
                    <option value="0"> Ana Kategori</option>
                    {% for cat in catlist %}
                        <option value="{{ cat.id }} "> {{ cat.title }} </option>
                    {% endfor %}
                {% endif %}
            </select>


        </div>
    </div>








    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Kategori Adı </label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ category.title}}"name="category[title]" placeholder="Enter a title..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Kısa Açıklama</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ category.description}}"name="category[description]" placeholder="Enter a description..">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Anahtar Kelimeler</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ category.keywords}}"name="category[keywords]" placeholder="Enter a keywords..">
        </div>
    </div>



            <div class="form-group row">
                <label class="col-lg-2 col-form-label" for="val-username">Aktif Durum <span class="text-danger">*</span>
                </label>
                <div class="col-lg-8">
                    <select class="form-control" id="val-skill" name="category[status]">
                        <option >{{ category.status }}</option>
                        <option >True</option>
                        <option >False</option>

                    </select>
                </div>
            </div>

                <div class="form-group row">
                    <div class="col-lg-8 ml-auto">
                        <button type="submit" class="btn btn-primary">Kaydet</button>

                    </div>
                </div>







</form>