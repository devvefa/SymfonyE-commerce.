{% extends 'adminbase.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}


<section id="checkout-container">
    <div class="container">
        <div class="py-5 text-center">
            <i class="fa fa-credit-card fa-3x text-primary"></i>
            <h2 class="my-3">ÖDEME </h2>
            <p class="lead">---------------</p>
        </div>
        <div class="row py-5">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Alışveriş Septiniz</span>
                    <span class="badge badge-secondary badge-pill">----adet----</span>
                </h4>
                <ul class="list-group mb-3">

                    -----for

                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0"></h6>{# {{shopcart.title }}  #}
                            <small class="text-muted">Brief description</small>
                        </div>
                        <span class="text-muted">$12</span>
                    </li>
                    -----



                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total </span>
                        <strong>{{ total }}</strong>
                    </li>
                </ul>

            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Ödeme Bilgileri</h4>
                    <form name="orderses"  action="{{ path('orderses_new') }}" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="orderses_name">Ad Soyad</label>

                            <input type="text" class="form-control"id="orderses_name" value="{{app.user.name }}" name="orderses[name]">
                            <div class="invalid-feedback">

                            </div>
                        </div>

                    </div>



                    <div class="mb-3">
                        <label for="orderses_address">Email</label>
                        <input type="email"class="form-control" id="orderses_address" value="{{ app.user.email }}"name="orderses[email]" placeholder="you@example.com">
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="address">Adres</label>
                        <input type="text" class="form-control" value="{{ app.user.address }}"name="orderses[address]"  >

                    </div>

                    <div class="mb-3">
                        <label for="address">Telefon</label>
                        <input type="number" class="form-control" value="{{app.user.phone }}"  >

                    </div>


                        <div class="col-md-3 mb-3">
                            <label for="zip">İl</label>
                            <input type="text" class="form-control" value="{{ app.user.city }}" >
                            <div class="invalid-feedback">
                                Zip code .
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">



                    </div>
                    <hr class="mb-4">

                    <h4 class="mb-3">Payment</h4>

                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked >
                            <label class="custom-control-label" for="credit">Credit card</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="debit" name="paymentMethod" type="radio" class="custom-control-input" >
                            <label class="custom-control-label" for="debit">Debit card</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" >
                            <label class="custom-control-label" for="paypal">Paypal</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-name">Name on card</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="" >
                            <small class="text-muted">Full name as displayed on card</small>
                            <div class="invalid-feedback">
                                Name on card is 
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cc-number">Credit card number</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="" >
                            <div class="invalid-feedback">
                                Credit card number is 
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">Expiration</label>
                            <input type="text" class="form-control" id="cc-expiration" placeholder="" >
                            <div class="invalid-feedback">
                                Expiration date 
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" >
                            <div class="invalid-feedback">
                                Security code 
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">
                 <input type="hidden" name="token" value="{{ csrf_token('form-orderses')}}"/>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
                </form>
            </div>


    <a href="#" class="btn btn-primary scrollUp">
        <i class="fa fa-arrow-circle-o-up"></i>
    </a>
</section>

{% endblock %}
{##}