
{% extends 'frontbase.html.twig' %}



{% block title %} Shopcart {{ setSite[0].title }}{% endblock %}
{% block keywords %}  {{setSite[0].keywords}}{% endblock %}
{% block description %}  {{setSite[0].description}}{% endblock %}
{% block header %}{% include 'home/header.html.twig' %}{% endblock %}


    {% block stylesheets %}

        <script>
            addEventListener("load", function () {
                setTimeout(hideURLbar, 0);
            }, false);

            function hideURLbar() {
                window.scrollTo(0, 1);
            }
        </script>





{% endblock %}


{% block yol %}
    <div class="services-breadcrumb">
        <div class="agile_inner_breadcrumb">
            <div class="container">
                <ul class="w3_short">
                    <li>
                        <a href="index.html">Home</a>
                        <i>|</i>
                    </li>
                    <li>Checkout</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- //page -->
    <!-- checkout page -->
    <div class="privacy">
        <div class="container">
            <!-- tittle heading -->
            <h3 class="tittle-w3l">Checkout
                <span class="heading-style">
					<i></i>
					<i></i>
					<i></i>
				</span>
            </h3>
            <!-- //tittle heading -->
            <div class="checkout-right">
                <h4>Sepette
                    <span>{{ shopcarts|length }} ürünü</span> mevcut
                </h4>
                <div class="table-responsive">
                    <table class="timetable_sub">
                        <thead>
                        <tr>


                            <th>Ürün No</th>
                            <th>Ürün</th>
                            <th>Ürün Adı</th>
                            <th>Miktar</th>
                            <th>Fiyat</th>
                            <th>Sil</th>





                        </tr>
                        </thead>
                        <tbody>

                        {% for shopcart in shopcarts %}
                            <tr>
                            <tr class="rem1">
                                <td class="invert"> {{ shopcart.id }}</td>
                                <td class="invert-image">
                                    <a href="{{ path('products_det',{'urn': shopcart.id}) }}">
                                        <img src="{{ asset('uploads') }}/images/{{ shopcart.image}}" alt=" " class="img-responsive">
                                    </a>
                                </td>


                                <td class="invert">{{ shopcart.title }} </td>

                                <td class="invert">
                                                <span>{{ shopcart.quantity }}</span>

                                </td>
                                <td class="invert">{{ shopcart.quantity  * shopcart.sprice }} </td>
                                <td class="invert">
                                    {{ include('shopcart/_delete_form.html.twig') }}

                                </td>



                            </tr>





                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>




                        {% endfor %}







                        </tbody>
                    </table>
                </div>
            </div>

            <div class="checkout-right-basket">
                <a href="{{ path('orderses_new') }}">Ödemeye Geç
                    <span class="fa fa-hand-o-right" aria-hidden="true"></span>
                </a>
            </div>
        </div>

    </div>





{% endblock %}

{% block footer %} {% include 'home/footer.html.twig' %}{% endblock %}

