

{% extends 'frontbase.html.twig' %}
{% block head1 %}{% include 'home/head1.html.twig' %}{% endblock %}
{% block content %}
    <div class="ads-grid">

    <div class="container">
<form name="user" class="form-horizontal" method="post">

    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Aktif Durum <span class="text-danger">*</span>
        </label>
        <div class="col-lg-8">
            <select class="form-control" name="kullanici[roles]" >
                <option >ROLE_USER</option>
                <option >ROLE_ADMIN</option>


            </select>
        </div>
    </div>


    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username"> Adı </label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ kullanici.name}}"name="kullanici[name]" placeholder="Enter a name..">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username"> Email </label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ kullanici.email}}"name="kullanici[email]" placeholder="Enter a email..">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Şifre </label>
        <div class="col-lg-8">
            <input type="text" class="form-control" id="val-username"
                   value="{{ kullanici.password}}"name="kullanici[password]" placeholder="Enter a password..">
        </div>
    </div>



    <div class="form-group row">
        <label class="col-lg-2 col-form-label" for="val-username">Aktif Durum <span class="text-danger">*</span>
        </label>
        <div class="col-lg-8">
            <select class="form-control" id="val-skill" name="kullanici[status]">
                <option >{{ kullanici.status }}</option>
                <option >True</option>
                <option >False</option>

            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-8 ml-auto">
            <input type="hidden" name="token" value="{{ csrf_token('user-form')}}"/>

            <button type="submit" class="btn btn-primary">Kaydet</button>

        </div>
    </div>



</form>
{% endblock %}