                <!-- first section -->


                <div class="product-sec1">
                    {% for rs in products %}
                        <div class="col-xs-4 product-men">
                            <div class="men-pro-item simpleCart_shelfItem">
                                <div class="men-thumb-item">
                                    <img src="{{ asset('uploads') }}/images/{{ rs.image}}" height="200" alt="">

                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a href=" {{ path('products_det',{'urn': rs.id}) }}" class="link-product-add-cart"> incele</a>
                                        </div>
                                    </div>
                                    <span class="product-new-top">New</span>
                                </div>
                                <div class="item-info-product ">
                                    <h4>
                                        <a href="{{ path('products_det',{'urn': rs.id}) }}">{{ rs.title}}</a>
                                    </h4>
                                    <div class="info-product-price">
                                    <span class="item_price">{{ rs.pprice}} <span style="content:20BA">&#8378;</span>
                                    <del style="">{{ rs.sprice}} </del>
                                    </div>
